<h2 class="content-subhead">Search</h2>

<form action="/search" method="get">
  <input name="query" value="<%= params[:query] %>">
  <button type="submit">Search</button>
</form>

<h2><%= @message %></h2>

<ul class="main-search">
  <% @includes.each do |number, chapter| %>
  <li>
    <% chapter.each do |key, value| %>
    <h3><%= key %></h3>
    <ul>
      <% value.each do |para| %>
        <% para.each do |index, paragraph| %>
        <li>
          <a href="/chapters/<%= number + 1 %>#para<%= index %>">
            <%= paragraph %>
          </a>
        </li>
        <% end %>
      <% end %>
    </ul>
    <% end %>
  </li>
  <% end %>
</ul>

<h3><%= @sorry %></h3>
