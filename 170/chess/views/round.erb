<ol>
  <% @round.pairs.each do |pair| %>

  <% if pair.winner %>
  <div class="pair finished">
    <li>
      <form action="/undo_win/<%= pair.winner %>" method="post">
        <button type="submit" value="Submit">
          <p><%= pair.white.name %>: <%= pair.white.score %></p>
        </button>
      <p>V.S.</p>
        <button type="submit" value="Submit">
          <p><%= pair.black.name %>: <%= pair.black.score %></p>
        </button>
      </form>
    </li>
  </div>

  <% else %>
  <div class="pair">
    <li>
      <form action="/win/<%= pair.white.name %>" method="post">
        <button type="submit" value="Submit">
          <p><%= pair.white.name %>: <%= pair.white.score %></p>
        </button>
      </form>
      <p>V.S.</p>
      <form action="/win/<%= pair.black.name %>" method="post">
        <button type="submit" value="Submit">
          <p><%= pair.black.name %>: <%= pair.black.score %></p>
        </button>
      </form>
    </li>
  </div>
  <% end %>

  <% end %>
</ol>
<a href="/players">Cancel</a>

<form action="/finish" method="post">
  <button type="submit" value="Submit">
    <p>Finish Round</p>
  </button>
</form>
