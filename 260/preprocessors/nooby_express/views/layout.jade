doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/application.css')
    link(href="http://fonts.googleapis.com/css?family=Fjalla+One" rel="stylesheet" type="text/css")
  body
    header
      nav
        ul
          each link in links
            li
              if link.active
                a.active(href="#{link.href}")= link.title
              else
                a(href="#{link.href}")= link.title
    block content
