include _mixins.pug
doctype html
html(lang="en-US")
  head
    +stylesheet_link('main')
    title Sushi Restaurant Website
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
    +js_link('vendor/handlebars-v4.0.11')
    +js_link('vendor/vendor')
    +js_link('vendor/handlebar_templates')
  body
    header
      a.logo(href="/")
        img(src="images/logo.png" alt="logo")
      div.cart
        a(href="/")
          span.left Shopping Cart
          span.right
            span.count 1
            item
    main
      div#cart
        ul
          li(data-id="1")
            figure
              img(src="images/sashimi-salad.jpg" alt="cart-item")
            p 2 x $12.00
        section
          h3 Your<br/>shopping cart
          p.total $24.00
          p
          footer
            a.left.empty_cart(href="#") Empty cart
            a.right.checkout(href="/checkout") Checkout
      div.content
        block content
    
    footer
  +js_link('models/dish')
  +js_link('collections/dishes')
  +js_link('views/dishesview')
  +js_link('application')
